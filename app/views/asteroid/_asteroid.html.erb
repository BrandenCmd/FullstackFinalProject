<div class="column">
  <div class="card">
    <% if asteroid.image.present? %>
      <div class="card-image">
        <figure>
          <%= image_tag asteroid.image %>
        </figure>
      </div>
    <% end %>
    <div>
      <p class="title is-4"><%= asteroid.name %></p>
      <p class="subtitle is-6"><%= asteroid.cost %></p>
    </div>
    <div class="content">
      <%= asteroid.description %>
    </div>
    <footer class="card-footer">
      <a href="#" class="card-footer-item">Add to Cart</a>
      <a href="#" class="card-footer-item">Buy Now</a>
    </footer>
  </div>
</div>