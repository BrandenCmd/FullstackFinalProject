<h1 class="title is-2">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"checkbox" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"button is-link mb-5" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
