<div class="column is-one-third">
  <div class="card">
    <% if planet.image.present? %>
      <div class="card-image">
        <figure class="image is 3x3">
          <%= image_tag(planet.image, alt: "#{planet.name} image") %>
        </figure>
      </div>
    <% end %>
    <div class="card-content">
      <p class="title is-4"><%= link_to planet.name, planet %></p>
      <p class="subtitle is-6 has-text-success"><%= number_to_currency planet.cost %></p>
      <p><%= planet.planet_type.name %></p>
      <div class="content">
        <%= planet.description %>
      </div>
    </div>
    <footer class="card-footer">
      <% if cart.include?(planet) %>
        <%= button_to cart_path(planet), method: :delete, class: "button is-danger" do %>
          Remove from Cart
        <% end %>
      <% else %>
        <%= form_with url: cart_index_path, method: :post do %>
          <%= hidden_field_tag(:id, planet.id) %>
          <%= button_tag 'Add to Cart', class: "button is-success" %>
        <% end %>
      <% end %>
    </footer>
  </div>
</div>