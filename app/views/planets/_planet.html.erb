<div class="column is-one-third">
  <div class="card">
    <% if planet.image.present? %>
      <div class="card-image">
        <figure class="image is 3x3">
          <%= image_tag(planet.image, alt: "#{planet.name} image") %>
        </figure>
      </div>
    <% end %>
    <div class="card-content">
      <p class="title is-4"><%= link_to planet.name, planet %></p>
      <p class="subtitle is-6 has-text-success"><%= number_to_currency planet.cost %></p>
      <p><%= planet.planet_type.name %></p>
      <div class="content">
        <%= planet.description %>
      </div>
    </div>
    <footer class="card-footer">
      <a href="#" class="card-footer-item">Add to Cart</a>
      <a href="#" class="card-footer-item">Buy Now</a>
    </footer>
  </div>
</div>